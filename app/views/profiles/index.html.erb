  <body>
    <div class="container">
      <div class="columns is-one-third">
      <% @profiles.each do |profile| %>
          <div class="column ">
            <div class="card">
              <div class="card-content">
                <p class="title">
                  <ul>
                    <li><%= image_tag profile.avatar.url(:thumb) %></li>
                    <li>Name:<%= profile.name %></li>
                  </ul>
                </p>
                <p class="subtitle">
                  <ul>
                    <li>Username:<%= profile.username %></li>
                    <li>Age:<%= profile.age %></li>
                    <li>Gender:<%= profile.gender %></li>
                    <li>Location:<%= profile.city %></li>
                    <li>Bio:<%= profile.bio %></li>
                    <li>Interests:<%= profile.interests %></li>
                  </ul>
                </p>
                <footer class="card-footer">
                  <p class="card-footer-item">
                  <%= link_to 'Show', profile %>
                    <td><%= link_to 'Edit', edit_profile_path(profile) %>
                    <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </p>
              </div>
            </div>
          </div>
      <% end %>
    </div>
