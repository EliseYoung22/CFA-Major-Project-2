<div class="col-md-6">
  <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% elsif flash[:warning] %>
      <div class="alert alert-danger"><%= flash[:warning] %></div>
    <% else %>
  <% end %>
<div class="column is-one-third is-offset-one-third">
  <div class="heading center-text border">
   <h1>Contact Us</h1>
 </div>
</div>


<div class="column is-one-third is-offset-one-third">
  <div class="center-text border">
    <%= simple_form_for :contact do |f| %>
        <%= f.input :email, placeholder: 'type email here' %>
        <%= f.input :message, placeholder: 'type message here', :as => :text %>
        <%= f.button :submit, "Send" %>
      </div>
    <% end %>
  </div>
</div>


