<div class="col-md-6">
  <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% elsif flash[:warning] %>
      <div class="alert alert-danger"><%= flash[:warning] %></div>
    <% else %>
  <% end %>
</div>

<div class="background">
  <div class="column is-one-third is-offset-one-third">
    <div class="heading center-text border-box">
     <h1>Contact Us</h1>
    </div>
  </div>
</div>
<div class="body">
  <div class="column is-one-third is-offset-one-third">
    <div class=" center-text border">
     <h1>Want to get involved?</h1>
    </div>
    </div>
      <div class="column is-one-third is-offset-one-third">
        <div class="center-text border-grey">
          <ul>
            <%= simple_form_for :contact do |f| %>
            <li class="padding"><%= f.input :email, placeholder: 'type email here' %></li>
            <li class="padding"><%= f.input :message, placeholder: 'type message here', :as => :text %></li>
            <%= f.button :submit, "Send" %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
