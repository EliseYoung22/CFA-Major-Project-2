<%= form_tag(posts_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>
<% end %>
<p id="notice"><%= notice %></p>
<body>
  <div class="column is-one-third is-offset-one-third">
    <div class="heading center-text border">
      <h1> Posts</h1>
    </div>
  </div>
  <div class="column is-half is-offset-one-quarter">
    <table>
          <!-- <thead>
            <tr>
              <th>Title</th>
              <th>Content</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead> -->

          <tbody>
            <% @posts.each do |post| %>
              <ul class="box">
                <li>Title:<%= post.title %></li>
                <li><%= post.content %></li>
                <li>User:<%= post.user.email %></li>
                <%= link_to 'Show',  topic_post_path(post.topic, post) %>
                  <% if post.user == current_user %>
                  <%= link_to 'Edit', edit_topic_post_path(post.topic, post)%>
                  <%= link_to 'Delete', topic_post_path(post.topic, post), method: :delete, data: { confirm: 'Are you sure?' } %>
                 <% end %>
              </ul>
            <% end %>
          </tbody>
        </table>
        <br>
         <%= link_to 'Join the conversation!', new_topic_post_path, class: "button" %>
        </br>
      </div>
    </div>
  </div>
</body>
