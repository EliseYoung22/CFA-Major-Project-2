<body>
  <div class="container">
    <div class="columns is-multiline">
   <% @topics.each do |topic| %>
        <div class="column">
          <div class="card">
            <div class="card-content">
              <p class="title">
                <%= topic.name %>
              <p class="subtitle">
                <%= topic.name %>
                <%= topic.description %>
                <%= topic.image %>
              </p>
            </div>
            <footer class="card-footer">
              <p class="card-footer-item">
                <%= link_to 'Edit', edit_topic_path(topic) if current_user.admin? %>
                <%= link_to 'Delete', topic, method: :delete, data: {confirm: 'Are you sure?'} if current_user.admin? %>
                <%= link_to 'Show', topic_posts_path(topic) %>
              </p>
            </footer>
         </div>
       </div>
     <% end %>
